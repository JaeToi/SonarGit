pipeline {
    agent any
    tools {
        nodejs 'node18'
    }
    
    stages {
        stage('git pull') { // use 'dev' branch
            steps {
                git branch: 'main', credentialsId: 'GitHub_Token', url: 'https://github.com/JaeToi/SonarGit.git/'
            }
        }
        
        stage('build') {
            steps {
                sh "pwd"
                dir('test_sonar2') {
                    sh "pwd"
                    sh "npm install"
                    sh "npm run build"
                }
            }
        }
        
        stage('deploy') {
            steps {
                sh "pwd"
                dir('test_sonar2') {
                    sh "pwd"
                    sshagent (credentials: ['ssh-key']) {
                        sh "scp -r dist/ backend@192.168.137.1:/home/backend/"
                        sh "ssh backend@192.168.137.1 './dev_deploy.sh'"
                    }
                }
            }
        }
        
   		// stage...
   	}
}
