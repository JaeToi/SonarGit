pipeline {
    agent any

    stages {
        stage('build'){
            steps{
                build wait: false, job: 'GitHub_Project', waitForStart: true
            }
        }
        
        stage ('checkout'){
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'GitHub_Token', url: 'https://github.com/JaeToi/SonarGit.git']])
            }
        }
  

          stage('SCM') {
            steps {
                   git branch: "main",
                   url: "https://github.com/JaeToi/SonarGit.git"
            }
          }
        
          stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube_Server') {
                    sh "mvn sonar:sonar -Dsonar.projectKey=Sonar_Github -Dsonar.host.url=http://localhost:9000 -Dsonar.login=sqp_06c707602d27470f96357ec59f62a8e11c0db126"
                }
            }
          }
  }
}
